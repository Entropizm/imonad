{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "lib": ["ES2020"]
  },
  "include": [
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./hardhat.config.ts",
    "./typechain-types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app",
    "components",
    "lib",
    ".next"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}

